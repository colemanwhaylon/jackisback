<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="akka"
             type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
  </configSections>

  <akka>
    <hocon>
      <![CDATA[
      
        akka {
          loglevel = INFO 
          
          loggers = ["Akka.Logger.Serilog.SerilogLogger, Akka.Logger.Serilog"]

          actor {
            provider = cluster
            debug {
              receive = on
              autoreceive = on
              lifecycle = on
              event-stream = on
              unhandled = on
            }
            deployment {
              /TotalNumberOfTweetsActor {
                router = round-robin-pool
                nr-of-instances = 2
              }
              
              /TweetStatisticsActor {
                router = round-robin-pool
                nr-of-instances = 2
              }
            
              /TweetAverageActor {
                router = round-robin-pool
                nr-of-instances = 2
              }
           
              /TopEmojisUsedActor {
                router = round-robin-pool
                nr-of-instances = 2
              }
            
              /PercentOfTweetsContainingEmojisActor {
                router = round-robin-pool
                nr-of-instances = 2
              }
            
              /TopHashTagsActor {
                router = round-robin-pool
                nr-of-instances = 2
              }
            
              /PercentOfTweetsWithUrlActor {
                router = round-robin-pool
                nr-of-instances = 2
              }
            
              /PercentOfTweetsWithPhotoUrlActor {
                router = round-robin-pool
                nr-of-instances = 2
              }
            
              /TopDomainsActor {
                router = round-robin-pool
                nr-of-instances = 2
              }
            
            }
          }
          
          remote {
            helios.tcp {
  	          transport-class = "Akka.Remote.Transport.Helios.HeliosTcpTransport, Akka.Remote"
  	          transport-protocol = tcp
  	          port = 0
  	          hostname = localhost
            }
          }
        }      
      
      ]]>
    </hocon>
  </akka>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1" />
  </startup>

</configuration>